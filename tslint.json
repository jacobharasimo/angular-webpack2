{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    // Custom
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    // General
    "no-var-keyword": true,
    "no-require-imports": false,
    "no-console": [true,
      "time",
      "timeEnd",
      "trace"
    ],
    "max-line-length": [
      true,
      160
    ],
    "member-access": false,//custom
    "no-string-literal": false,
    "no-use-before-declare": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "use-strict": false,
    "variable-name": false
  }
}
